<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contact.App">
    <!--Recursos y estilos de la página-->
    <Application.Resources>
        <ResourceDictionary>
            <!--Recursos-->
            <Color x:Key="colorTextMain">#1E90FF</Color>
            <!--Estilos-->
            <Style TargetType="Entry"> <!--Global-->
                <Setter Property="TextColor" Value="{StaticResource colorTextMain}" />
                <Setter Property="FontFamily" Value="Arial" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
            <Style TargetType="Entry" x:Key="additional"> <!--Local-->
                <Setter Property="TextColor" Value="Magenta" />
                <Setter Property="FontFamily" Value="Arial" />
                <Setter Property="FontAttributes" Value="None" />
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>